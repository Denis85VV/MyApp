<%= link_to "Добавить комиссариат", new_recruitmentoffice_path, :class => "btn" %>
<hr>
<table class="table table-striped table-bordered">
	<thead>
			<tr>
				<th>Название</th>
				<th>Полное название</th>
				<th>Номер телефона</th>
				<th>Адрес</th>
			</tr>
	</thead>
	<tbody>
		<% if !@recruitmentoffices.blank? %>
		<% @recruitmentoffices.each do |recruitmentoffice| %>
		    <tr>
		    	<td>
		    		<%= recruitmentoffice.smallname %>
		    	</td>	
		  		<td>
		  			<%= recruitmentoffice.bigname %>
		  		</td>
		  		<td>
		  			<%= recruitmentoffice.phone_number %>
		  		</td>
		  		<td>
		  			<%= recruitmentoffice.address %>
		  		</td>
		  		<td>
		  			<%= link_to 'Изменить', edit_recruitmentoffice_path(recruitmentoffice), :class => 'btn btn-mini' %>
		  		</td>
		  		<td>
		  			<%= link_to 'Удалить', recruitmentoffice, method: :delete, :class => 'btn btn-mini btn-danger' %>
		  		</td>
		    </tr>
		<% end %>
		<% else %>
		  
		<% end %>
	</tbody>
</table>
<hr>
<div>
<% if !@recruitmentoffices.blank? %>

<%= select_tag :recruitmentoffice, options_for_select(@recruitmentoffices.map{ |f| [f.smallname, f.bigname] }) %>

<% else %>

<% end %>
</div>
