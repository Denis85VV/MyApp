<div class ="head">
	<%= image_tag("tvgu_0.jpg", size: "114", class: "image" ) %>
	<h3 id="header">Иформационная система воинского учета ТвГУ</h3>
</div>
<div class = "sign_in">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, :label => 'Почта' %>
    <%= f.input :password, required: false, :label => 'Пароль' %>
    <%= f.input :remember_me, as: :boolean, :label => 'Запомнить?' if devise_mapping.rememberable? %>
  </div>

  <div id = "button_sing_in">
    <%= f.button :submit, "Войти" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>